{
    "name" : "Hello World Extension",
    "description" : "Building a hello world extension",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons": {
        "16" : "./images/aces.png",
        "32" : "./images/aces.png",
        "48" : "./images/aces.png",
        "128" : "./images/aces.png"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "action": {
        "default_popup": "./popup.html",
        "default_icons": {
            "16" : "./images/aces.png",
            "32" : "./images/aces.png",
            "48" : "./images/aces.png",
            "128" : "./images/aces.png"
        }
    },
    "options_page": "./options.html",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://www.google.com",
        "<all_urls>"
    ]
}